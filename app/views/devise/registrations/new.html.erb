<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if params[:plan] == '2' %>
        <h1 class="text-center">Pro Account</h1>
        <p class="text-center">Sign up for the Pro account for $5/month and get access to full Service</p>
    <% else %>
        <h1 class="text-center">Basic Account</h1>
        <p class="text-center">Sign up for free and get access to the Community</p>
  <% end %>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <h2>Sign up</h2>
      <% if params[:plan] == '1' %>
        <%= render 'basic_form'%>
      <% else %>
        <%= render 'pro_form'%>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>



