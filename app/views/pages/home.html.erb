<div class="jumbotron text-center">
  <h2>Welcome to Job Board</h2>
  <h3> Membership Site for Students and Employers meet up</h3>
</div>
<div class="row">
  <% if user_signed_in? %>
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">Your Profile</h2>
          <% if current_user.profile %>
              <%= link_to 'Edit Profile', edit_user_profile_path(user_id: current_user.id) , class: 'btn btn-default btn-lg btn-block' %>
              <%= link_to 'View Profile', user_path(current_user), class: 'btn btn-default btn-lg btn-block'  %>
          <% else %>
              <p>Create your Profile to share your information with the community</p>
              <%= link_to 'Create Profile', new_user_profile_path(current_user) %>
          <% end %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">The Community</h2>
          <p>Visit the Community to meet other Developers,Entrepreneurs and Investors </p>
          <%= link_to 'Visit the Community', users_path, class: 'btn btn-default btn-lg btn-block'%>
        </div>
      </div>
<% else %>
      <div class="col-md-6">
        <div class="well">
          <h3 class="text-center">Basic Membership</h3>
          <h4>Sign up for free and get access to the Community</h4><br>
          <%= link_to ' Sign Up for Basic Plan', new_user_registration_path(plan:@basic_plan.id), class: 'btn btn-primary btn-lg btn-block'%><br>
        </div>
      </div>
      <div class="col-md-6">
        <div class="well">
          <h3 class="text-center">Pro Membership</h3>
          <h4>Sign up for the Pro account for $5/month and get access to full Service</h4><br>
          <%= link_to ' Sign Up for Premium Plan', new_user_registration_path(plan:@pro_plan.id), class: 'btn btn-success btn-lg btn-block'%><br>
        </div>
      </div>
  <% end %>


</div>
